{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      },
      {
         "options": [
           "element",
           "color",
           "font",
           "units"
         ],
         "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
       }
    ]
  },
  "options": {
    "properties": {
      "element": {
        "title": "Forecast selector location",
        "order": 0,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "color": {
        "default": "#1bccef",
        "format": "color",
        "order": 1,
        "title": "Temperature Bar color",
        "type": "string"
      },
      "font": {
        "default": "georgia",
        "order": 2,
        "title": "Font",
        "type": "string"
      },
      "units": {
        "default": "us",
        "order": 3,
        "title": "Units",
        "type": "string"
      }
    }
  }
}
