{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      },
      {
         "options": [
           "element",
           "color",
           "font",
           "units"
         ],
         "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
       }
    ]
  },
  "options": {
    "properties": {
      "element": {
        "title": "Forecast selector location",
        "order": 0,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "colors": {
        "title": "Colors",
        "order": 1,
        "type": "object",
        "properties": {
          "tempColor": {
            "default": "#1bccef",
            "format": "color",
            "order": 0,
            "title": "Temperature Bar color",
            "type": "string"
          },
          "backgroundColor": {
            "default": "#fafafa",
            "format": "color",
            "order": 1,
            "title": "Background color",
            "type": "string"
          }
        }
      },
      "font": {
        "default": "Helvetica",
        "order": 2,
        "placeholder": "Helvetica",
        "title": "Font",
        "type": "string"
      },
      "units": {
        "default": "us",
        "order": 3,
        "title": "Units",
        "type": "string",
        "enum": [
          "us",
          "uk",
          "si",
          "ca"
        ],
        "enumNames": {
          "us": "Fahrenheit and mph",
          "uk": "Celsius and mph",
          "si": "Celsius and m/s",
          "ca": "Celsius and km/h"
        }
      }
    }
  }
}

